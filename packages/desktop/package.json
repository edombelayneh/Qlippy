{
  "name": "desktop",
  "version": "1.0.0",
  "private": true,
  "main": "hotword.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.qlippy.desktop",
    "productName": "Qlippy",
    "mac": {
      "category": "public.app-category.productivity",
      "extendInfo": {
        "NSCameraUseContinuityCameraDeviceType": true,
        "NSMicrophoneUsageDescription": "Qlippy needs access to your microphone for voice commands and audio recording.",
        "NSCameraUsageDescription": "Qlippy needs camera access for Continuity Camera support."
      }
    }
  },
  "dependencies": {
    "@picovoice/porcupine-node": "^3.0.2",
    "@picovoice/pvrecorder-node": "^1.2.2",
    "form-data": "^4.0.3",
    "node-fetch": "^2.7.0",
    "node-record-lpcm16": "^1.0.1"
  }
}
